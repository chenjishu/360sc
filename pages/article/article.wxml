<view class="tab-wrapper">
<view class="tab">
<view class="tab-item {{currentIndex==0?'active':''}}" bindtap="changeIdx" data-index="0">茶圈</view>
<view class="tab-item {{currentIndex==1?'active':''}}" bindtap="changeIdx" data-index="1">茶圈</view>
<view class="tab-item {{currentIndex==2?'active':''}}" bindtap="changeIdx" data-index="2">茶圈</view>
<view class="tab-item {{currentIndex==3?'active':''}}" bindtap="changeIdx" data-index="3">茶圈</view>
</view>
</view>


  <swiper current="{{currentIndex}}"  indicator-dots bindchange="sChange" style="height:{{height-40}}px">
  <block wx:for="{{news}}" wx:key="news">
    <swiper-item>
    <scroll-view style="height:{{height-40}}px" scroll-y bindscrolltolower="lower" lower-threshold="100">
    <block wx:for="{{item.news}}" wx:key='item' wx:for-index="idx" wx:for-item="it">
    <view class="new" data-content="{{it.content}}" bindtap="tocontent">
    <view>
    {{it.title}}
    </view>
    <image src="{{it.listImages}}" style="width:80px;" mode="widthFix"></image> 
    </view>
    </block>
    <view wx:if="{{item.hasmore}}" style="padding:10px 0;text-align:center;font-size:12px;color:#999">正在加载</view>
    <view wx:if="{{!item.hasmore&&item.done}}"  style="padding:10px 0;text-align:center;font-size:12px;color:#999">没有更多了</view>
    </scroll-view>
    </swiper-item>
  </block>
</swiper>
