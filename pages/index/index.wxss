}

  .text {
        padding: 20px 10px;
        display: flex;
        align-items: center;
        background: #fff;
       
    }

    .text .head-wrapper {
        width: 68px;
        text-align: center;
    }

    .text .head-wrapper image {
        width: 50px;height:50px;
    }

    .text .line {
        width: 1px;
