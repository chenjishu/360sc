/**index.wxss**/
.swiper{
  width:750rpx;height:100vh;
}
.search-wrapper{
 display:flex;flex-direction: row;padding:10px;position:fixed;width:100%;top:0;left:0;z-index:10;transition: all 0.3;
}
.search-wrapper>view{
 height:30px;text-align:center;font-size:14px;background: #fff;color:#999;width:60%;border-radius:15px;line-height:30px;margin:0 auto;
}
.search-wrapper .img-wrapper{
  flex:1;text-align: center;height:20px;
}
.search-wrapper .img-wrapper>image{
  width:20px;height:20px;
}
.clear:after{
  display: table;
  content:'';
  clear:both;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.usermotto {
  margin-top: 200px;
}

.show{
  display:flex;
}
.show>.show-list{
  flex:1;height:60px;
  text-align: center;
  padding:10px 0;
}
.show>.show-list>image{
width:30px;height:30px;
}
.show>.show-list>.show-list-item{
  text-align:center;font-size:12px;color:#999;
}


.selection{

}
.selection>.title{
  text-align:center;font-size:20px;line-height:50px;font-weight: bold;
}
.selection>.box{
margin-top:20px;
}
.selection>.box>view>image{
  width:50%;
}
.selection>.box>.good-name{
  font-size:16px;font-weight:400;padding-left:20px;
}
.selection>.box>.good-intro{
  font-size:14px;margin-top:5px;height:20px;line-height:20px;overflow:hidden;text-overflow: ellipsis;color:#666;white-space: nowrap;padding-left:20px;
}
.selection>.box>.add-pri{
  display:flex;margin-top:10px;
}
.selection>.box>.add-pri>.add{
  flex:1;
}
.selection>.box>.add-pri>.add>image{
  width:20px;height:20px;float:right;margin-right:15px;
}
.selection>.box .good-pri{
color:red;font-weight: bold;padding-left:20px;margin-top:5px;flex:1;
}
.hot{

}
.hot>.title{
  text-align:center;font-size:20px;line-height:50px;font-weight: bold;
}

.goods:after{
  display:'table';
  content:'';
  clear:both;
}
.goods{
 border-bottom:1px solid #eee;
}
.goods>.good-wrapper{
  float:left;width:50%;
}
.goods>.good-wrapper:first-child,.goods>.good-wrapper:nth-child(2){
 border-top:1px solid #eee;
}
.goods .good{
  border:1px solid #eee;text-align:center;border-top:none;padding-bottom:10px;

}
.goods .good:nth-child(2n+1){
  border-right:0;
}
.goods .good>image{
  width:200rpx;height:200rpx;
}
.goods .good>.good-name{
  width:90%;margin:0 auto;height:20px;font-size:14px;color:#333;overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;line-height:20px;
text-align:left;
}
.goods .good>.good-in{
  width:90%;margin:0 auto;height:20px;font-size:12px;color:#999;overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;line-height:20px;text-align:left;
}
.do{
  display:flex;align-items:center;font-size:16px;color:red;width:90%;margin:6px auto 0;
}
.do>view{
  flex:1;text-align:left;padding-bottom: 4px;
}
.do>.like{
  text-align:right;
}
.do>view>image{
  width:20px;height:20px;margin-right:10px;vertical-align: middle
}
.cha{
  text-align:center;display:flex;flex-direction: row;align-items: center;justify-content: center
}
.cha>view{
  flex:1;
}
.cha image{
  width:40px;height:40px;
}


